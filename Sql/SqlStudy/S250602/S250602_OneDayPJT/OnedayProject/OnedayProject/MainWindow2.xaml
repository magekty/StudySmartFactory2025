<Window x:Class="OnedayProject.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnedayProject"
        mc:Ignorable="d"
  Title="MainWindow2" Height="450" Width="800">
    <Border Background="White" Margin="20" CornerRadius="10">
        <Grid Margin="20">
            <!-- 행 2개 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 열 2개 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 버튼 4개 -->
            <Button Grid.Row="0" Grid.Column="0" Content="Table 1" FontSize="18" Margin="10" Click="Table1_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Table 2" FontSize="18" Margin="10" Click="Table2_Click"/>
            <Button Grid.Row="1" Grid.Column="0" Content="Table 3" FontSize="18" Margin="10" Click="Table3_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Table 4" FontSize="18" Margin="10" Click="Table4_Click"/>
        </Grid>
    </Border>
</Window>